<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.orangeplasticcup.ocuptimemanagement">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OCupTimeManagement"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".ui.home.HomeScreenActivity"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/Theme.OCupTimeManagement.NoActionBar" />
        <activity
            android:name=".ui.register.RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.OCupTimeManagement.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.home.main.overview.editEntry.EditEntryActivity"
            android:label="@string/activity_edit_entry"
            android:theme="@style/Theme.OCupTimeManagement.NoActionBar"/>
    </application>
</manifest>