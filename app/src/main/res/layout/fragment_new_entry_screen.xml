<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/note"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/note_text"/>

            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="@string/category_text"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/startTimeText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/start_time_text"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/startTimeDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="@string/start_date"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/startTimeTime"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="@string/start_time"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/endTimeText"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/end_time_text"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/endTimeDate"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="@string/end_date"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/endTimeTime"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="@string/end_time"
                android:textSize="18sp" />

            <Button
                android:id="@+id/createEntryButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:text="@string/create_entry" />

            <Button
                android:id="@+id/cancelEdit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/action_cancel"
                android:enabled="false"
                android:visibility="gone"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>